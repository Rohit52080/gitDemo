<mvc:View controllerName="rohit.controller.Main" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">

<Page title="Welcome to My App">

<Button press="onLoadData" text="loadData"/>

<f:SimpleForm title="Address" singleContainerFullSize="false" columnsM="1" columnsL="1" columnsXL="1" emptySpanS="0" emptySpanM="4" emptySpanL="4" emptySpanXL="4" adjustLabelSpan="false" labelSpanS="12" labelSpanM="3" labelSpanL="3" labelSpanXL="3" layout="ResponsiveGridLayout" editable="true" id="SimpleFormChange354">


<f:content>

<Label text="Company Name"/>

<Input id="name" value="{/postPayload/companyName}"/>

<Label text="First Name/Last Name"/>

<Input value="{/postPayload/firstName}"> </Input>


<Input value="{/postPayload/lastName}">


<layoutData>

<l:GridData span="XL1 L2 M2 S4"/>

</layoutData>

</Input>

<Label text="Email"/>


<Input value="{/postPayload/email}">


<layoutData>

<l:GridData span="XL1 L2 M2 S4"/>

</layoutData>

</Input>

<Label text="WebSite"/>

<Input value="{/postPayload/website}"/>

<Label text="GSTNo"/>

<Input value="{/postPayload/gstNo}"/>

</f:content>
</f:SimpleForm>
<t:Table id="idTable">
<t:columns>
<t:Column>
<t:label>

<Text text="Name"/>

</t:label>
<t:template>

<Text text="{firstName} {lastName}"/>

</t:template>

</t:Column>
<t:Column>
<t:label text="Email">

<Text text="Email"/>

</t:label>
<t:template>

<Text text="{email}"/>

</t:template>

</t:Column>
<t:Column>
<t:label>

<Text text="Company Name"/>

</t:label>
<t:template>

<Text text="{companyName}"/>

</t:template>

</t:Column>

</t:columns>

</t:Table>
<footer>
<Toolbar>
<Button press="onSave" type="Success" text="Save"/>
<Button press="onDelete" type="Success" text="Delete"/>
</Toolbar>

</footer>

</Page>

</mvc:View>